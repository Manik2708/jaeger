{
  "policy": {
    "description": "Jaeger default ISM Policy",
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "rollover": {
              "min_index_age": "1d"
            }
          }
        ]
      }
    ],
    "ism_template": {
      "index_patterns": ["*jaeger-*"],
      "priority": 100
    }
  }
}